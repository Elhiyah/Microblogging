@model LoginViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center mb-4">Iniciar Sesión</h2>

                    <form asp-action="Login" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="UsernameOrEmail" class="form-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input asp-for="UsernameOrEmail" class="form-control" placeholder="Ingresa tu usuario o email" />
                            </div>
                            <span asp-validation-for="UsernameOrEmail" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                </div>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Ingresa tu contraseña" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                        </div>
                    </form>

                    <p class="text-center mt-3">¿No tienes una cuenta? <a asp-action="Register" class="text-primary">Regístrate aquí</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
